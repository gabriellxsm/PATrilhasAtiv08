using System;

class Program
{
    static void Main()
    {
        int soma = 0;

        for (int i = 1; i <= 100; i++)
        {
            if (i % 2 == 0)
            {
                soma += i;
            }
        }

        Console.WriteLine("A soma dos números pares entre 1 e 100 é: " + soma);
    }
}
